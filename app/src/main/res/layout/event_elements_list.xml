<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/event_card_marginTop"
    android:layout_marginBottom="@dimen/event_card_marginBottom"
    android:id="@+id/event_card_view"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_fill_textview"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/textFrontColor"
            android:background="@color/textViewBackground"
            android:layout_height="wrap_content"
            android:textSize="@dimen/event_card_image_height"/>

        <TextView
            android:id="@+id/event_card_text"
            android:padding="@dimen/card_text_pad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/event_card_text_marginTop"
            android:layout_marginBottom="@dimen/event_card_text_marginBottom"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


    </LinearLayout>

</android.support.v7.widget.CardView>