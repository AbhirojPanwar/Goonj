<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/textViewBackground"
    android:layout_margin="@dimen/card_margin"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/upd_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.1"
        android:paddingLeft="@dimen/event_card_text_marginTop"
        android:textColor="@android:color/black"
        android:textSize="@dimen/upd_title"/>


    <TextView
        android:id="@+id/upd_mess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/event_card_text_marginTop"
        android:textColor="@android:color/black"
        android:textSize="@dimen/upd_mess"/>

    <TextView
        android:text="@string/by"
        android:id="@+id/upd_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/upd_by"
        android:textColor="@android:color/black"
        android:padding="@dimen/event_card_text_marginTop"
        />

</LinearLayout>